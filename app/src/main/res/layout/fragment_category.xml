<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.drawer.drawer_produts.stockofproduts.StockProdutFragment">

    <LinearLayout
        android:id="@+id/linearLayoutCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:ignore="MissingConstraints">

        <SearchView
            android:id="@+id/search_category"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/seletor_bord_black" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/image_button_add_category"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/purple_500"
            android:gravity="top"
            android:src="@drawable/ic_baseline_add" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCategory"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>